package com.biz.var;

public class IntVar_02 {

	/*
	 * main() 메서드는 최종적으로 JVM(자바가상머신)이
	 * IntVar_02.main() 형태로 호출하여 사요하며
	 * 우리가 만든 클래스에 main() 메서드가 없다면 작동하지 않음
	 * main() 메서드를 '코드의 시작점'이라고 한다
	 */
	public static void main(String[] args) {
		
		// 한 개의 EQ(=) 기호가 명령문에 있으면 항상 오른쪽 먼저 바라본다
		
		int intNum1 = 0;
		int intNum2 = 0;
		int intSum = 0;
		
		// 1. 40을 CPU로 보내고 
		// 2. 어떤 연산을 수행할 것인가 보고 없으면
		//3. 40 이라는 값을 intNum1 변수에 저장한다
		intNum1 = 40
				
		//1. intNum1에 저장된값을 CPU로 보내고
		//2. intNum2에 저장된 값을 CPU로 보내고
		//3. 두 값을 덧셈연산하고
		//4. 결과를 intSum에 저장한다
		intSum = intNum1 + intNum2;

	}

}

package com.biz.var;

public class Var_12 {

	public static void main(String[] args) {
		
		int nCount = 0;
		nCount = nCount + 1;
		
		System.out.println("카운트 1 : " + nCount);
		
		nCount += 1;
		System.out.println("카운트 2 : " + nCount);
		
		System.out.println("카운트 3 : " + (nCount++));
		System.out.println("카운트 4 : " + nCount);
	}

}

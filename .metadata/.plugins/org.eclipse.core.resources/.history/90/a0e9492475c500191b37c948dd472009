package com.biz.var;

public class Float_Var_03 {

	public static void main(String[] args) {
		
		int intKor = 90;
		int intEng = 87;
		int intMath = 67;
		
		int intSum = intKor + intEng + intMath;
		float fAvg = intSum / 3.0f;
		
		// %d : 정수형 값을 대신하는 ESCAPE 문자열
		// %f : 실수형 값을 대신하는 ESCAPE 문자열
		// %6d : 전체길이를 6자리로 오른정렬후 왼쪽에 빈칸 남김
		// %6.2d : 전체길이를 6자리로 오른정렬하고 소수점 이하 2자리까지 
		//         표기후 왼쪽 빈칸 남김
		System.out.println("=============================");
		System.out.println("성적표");
		System.out.println("-----------------------------");
		System.out.printf("국어점수 : %5d\n",intKor);
		System.out.printf("영어점수 : %5d\n",intEng);
		System.out.printf("수학점수 : %5d\n",intMath);
		System.out.println("-----------------------------");
		System.out.printf("총점 : %9d\n",intSum);
		System.out.printf("평균 : %9.2f\n",fAvg);
		System.out.println("=============================");

	}

}

package com.biz.var;

public class Float_Var_03 {

	public static void main(String[] args) {
		
		int intKor = 90;
		int intEng = 87;
		int intMath = 67;
		
		int intSum = intKor + intEng + intMath;
		float fAvg = intSum / 3.0f;
		System.out.println("=============================");
		System.out.println("성적표");
		System.out.println("-----------------------------");
		System.out.println("국어점수 : %d", intKor);
		System.out.println("영어점수 : %d", intEng);
		System.out.println("수학점수 : %d", intMath);
		System.out.println("-----------------------------");
		System.out.println("총점 : %d", intSum);
		System.out.println("평균 : %d",fAvg);
		System.out.println("=============================");

	}

}
